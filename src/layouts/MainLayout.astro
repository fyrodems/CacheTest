---
import "../styles/global.css";
import Header from "../components/Header.astro";
import SideMenu from "../components/SideMenu.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "CacheTest PWA" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Aplikacja do testowania strategii cache'owania w PWA"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-background">
    <div class="flex min-h-screen">
      <SideMenu />
      <div class="flex flex-col flex-1">
        <Header />
        <main class="flex-1">
          <slot />
        </main>
        <footer class="bg-muted py-4">
          <div
            class="container mx-auto text-center text-muted-foreground text-sm"
          >
            &copy; {new Date().getFullYear()} CacheTest PWA - NarzÄ™dzie do testowania
            strategii cache'owania
          </div>
        </footer>
      </div>
    </div>
  </body>
</html>

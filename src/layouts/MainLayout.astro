---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "CacheTest PWA" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Aplikacja do testowania strategii cache'owania w PWA"
    />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-primary py-3 px-4 shadow-md sticky top-0 z-10">
      <div class="container mx-auto flex items-center justify-between">
        <div class="text-primary-foreground font-bold text-lg">
          CacheTest PWA
        </div>
        <nav class="hidden md:flex space-x-4">
          <a href="/" class="text-primary-foreground hover:opacity-80"
            >Dashboard</a
          >
          <a
            href="/test/large-images"
            class="text-primary-foreground hover:opacity-80">Duże obrazy</a
          >
          <a
            href="/test/small-resources"
            class="text-primary-foreground hover:opacity-80">Małe zasoby</a
          >
          <a
            href="/test/dynamic-js"
            class="text-primary-foreground hover:opacity-80">Dynamiczny JS</a
          >
          <a href="/history" class="text-primary-foreground hover:opacity-80"
            >Historia</a
          >
          <a href="/education" class="text-primary-foreground hover:opacity-80"
            >Materiały</a
          >
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-muted py-4 mt-12">
      <div class="container mx-auto text-center text-muted-foreground text-sm">
        &copy; {new Date().getFullYear()} CacheTest PWA - Narzędzie do testowania
        strategii cache'owania
      </div>
    </footer>
  </body>
</html>
